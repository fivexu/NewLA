.productList {
  background-color: #fff;
  border-radius: 25rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.productList .pics {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  font-size: 0;
}

.productList image {
  width: 210rpx;
  height: 210rpx;
  border-radius: 6rpx;
}

.productList .title {
  padding-top: 36rpx;
  font-size: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: #1a1a1a;
}

.productList .title .time {
  font-size: 24rpx;
  font-weight: normal;
  color: rgb(102, 102, 102);
  display: inline-block;
  height: 34rpx;
  line-height: 50rpx;
  vertical-align: bottom;
  float: right;
}

.productList .address {
  margin: 38rpx 0;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: rgb(102, 102, 102);
  position: relative;
  padding-left: 30rpx;
}
.productList .address .add {
  display: inline-block;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 140rpx;
  overflow: hidden;
}

.productList .address .label {
  width: 62rpx;
  height: 28rpx;
  line-height: 28rpx;
  background-color: #e6e6e6;
  border-radius: 5rpx;
  text-align: center;
  font-size: 20rpx;
  color: #666;
  float: left;
  margin-left: 10rpx;
  overflow: hidden;
}

.productList .address .label.ac {
  background-color: #fa6639;
  color: #fff;
}

.productList .address image {
  width: 20rpx;
  height: 27rpx;
  position: absolute;
  bottom: 6rpx;
  left: 0;
}

.productList .address .old {
  color: rgb(153, 153, 153);
  text-decoration: line-through;
}

.productList .address .now {
  margin-left: 20rpx;
  color: rgb(250, 102, 57);
  font-weight: bolder;
}

.productList .address .nowAc {
  font-size: 38rpx;
}
