#search, page {
  width: 100%;
  min-height: 100%;
}

#search .header {
  width: 100%;
  height: 112rpx;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  background-color: #ffda44;
}

#search .header .search {
  width: 670rpx;
  height: 72rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx 0 #ffa944;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

#search .header .search image {
  width: 38rpx;
  height: 36rpx;
  float: left;
  margin: 20rpx 20rpx 0 20rpx;
}

#search .header .search input {
  width: 100%;
  height: 100%;
}

#search .history {
  padding: 32rpx 40rpx 0;
}

#search .history .title {
  font-size: 34rpx;
  color: #333;
  padding-bottom: 40rpx;
}

#search .history .histroy_list {
  font-size: 30rpx;
  color: #666;
  height: 96rpx;
  line-height: 96rpx;
}

#search .clear {
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}
