#release, page {
  height: 100%;
}

#release {
  padding: 40rpx 20rpx 0;
  overflow: hidden;
  background-color: #f9f9f9;
}

#release .wrapper {
  position: relative;
  width: 100%;
  margin-bottom: 40rpx;
}

.productList {
  position: relative;
  z-index: 10;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 20rpx;
  overflow: hidden;
}

.productList .pics {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  font-size: 0;
}

.productList image {
  width: 210rpx;
  height: 210rpx;
  border-radius: 6rpx;
}

.productList .title {
  padding-top: 36rpx;
  font-size: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: #1a1a1a;
}

.productList .title .time {
  font-size: 24rpx;
  font-weight: normal;
  color: rgb(102, 102, 102);
  display: inline-block;
  height: 34rpx;
  line-height: 50rpx;
  vertical-align: bottom;
  float: right;
}

.productList .address {
  margin: 38rpx 0;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
  position: relative;
}

.productList .address .label {
  padding: 0 15rpx;
  height: 28rpx;
  margin: 12rpx 20rpx 0 0;
  line-height: 28rpx;
  text-align: center;
  background-color: #e6e6e6;
  border-radius: 5rpx;
  font-size: 20rpx;
  vertical-align: middle;
  float: left;
}

.productList .address .label.ac {
  background-color: #fa6639;
  color: #fff;
}

.productList .address .old {
  float: left;
  margin-top: 6rpx;
}

.productList .address .now {
  margin-left: 20rpx;
  float: left;
  margin-top: 6rpx;
}

.productList .address .old image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}

.productList .address .now image {
  width: 30rpx;
  height: 22rpx;
  vertical-align: middle;
}

.productList .address .nowAc {
  font-size: 38rpx;
}

.productList .status {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 0;
}

.productList .status >image {
  width: 200rpx;
  height: 200rpx;
}

.delete_product {
  position: absolute;
  z-index: 1;
  right: -200rpx;
  top: 0;
  width: 160rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
}

.delete_product .shelf, .delete_product .delete {
  width: 160rpx;
  height: 194rpx;
  box-sizing: border-box;
  line-height: 194rpx;
  border-radius: 25rpx;
  border: solid 1rpx #fa6639;
  color: #fa6639;
  font-size: 38rpx;
  text-align: center;
}

.phone_to {
  width: 630rpx;
  height: fit-content;
  padding-top: 70rpx;
  background-color: #fff;
  border-radius: 25rpx;
  position: fixed;
  z-index: 1000;
  left: 0;
  bottom: 0;
  top: 0;
  right: 0;
  margin: auto;
  text-align: center;
  color: #1a1a1a;
}

.phone_to .text {
  padding-bottom: 70rpx;
}

.phone_to .btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  border-top: 1rpx solid #e6e6e6;
}

.phone_to .btn_item {
  flex: 1;
  font-size: 36rpx;
}

.phone_to .btn_item.ac {
  border-left: 1rpx solid #e6e6e6;
  color: #fa6639;
}

.model {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: 0;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.refresh {
  font-size: 28rpx;
  color: #b3b3b3;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
