@import '../../base/productList/productList.wxss';

#home, page {
  width: 100%;
  height: 100%;
  background-color: #f9f9f9;
}

#home .header {
  padding-top: 20rpx;
  background-color: #ffd944;
}

#home .header #search {
  width: 670rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  margin: auto;
  background-color: #fff;
  box-shadow: 0 0 10rpx 0 #ffa944;
  color: #ccc;
}

#home .header #search .address {
  flex: 1;
  font: 36rpx/72rpx 'PingFang';
  vertical-align: middle;
  color: rgb(26, 26, 26);
}

#home .header #search .address image {
  width: 31rpx;
  height: 42rpx;
  vertical-align: middle;
  margin: -6rpx 10rpx 0;
}

#home .header #search .search {
  flex: 2;
  height: 72rpx;
  line-height: 72rpx;
}

#home .header #search .search input {
  height: 72rpx;
  font: 24rpx/72rpx 'PingFang';
  color: rgb(153, 153, 153);
}

#home swiper {
  width: 100%;
  height: 312rpx;
  background-color: #313131;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

#home swiper swiper-item {
  padding: 10rpx;
  box-sizing: border-box !important;
}

#home swiper swiper-item >image {
  width: 100%;
  height: 295rpx;
  border-radius: 25rpx;
  box-shadow: 0 0 20px 0 rgba(26, 26, 26, 1);
}

#home .rank {
  width: 100%;
  position: relative;
  z-index: 10;
  left: 0;
  top: 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  background-color: #fff;
  margin-bottom: 40rpx;
}

#home .rank .rank_item {
  width: 250rpx;
  text-align: center;
}

#home .rank .all_detail {
  position: fixed;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: transparent;
  font-weight: normal;
  left: 0;
  top: 92rpx;
  text-align: left;
  overflow: hidden;
  transition: all 0.3s;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.all_detail .modal {
  width: 180rpx;
  transition: all 0.3s;
  background-color: rgba(0, 0, 0, 0.3);
}

.all_detail .rank_list {
  width: 570rpx;
  padding: 40rpx 16rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  transform: translateX(100%);
  transition: all 0.3s;
}

.all_detail .rank_list .product_rank {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.all_detail .rank_list .product_rank .rank_list_item {
  width: 170rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 22rpx;
  border-radius: 6rpx;
  text-align: center;
  background-color: #e6e6e6;
  color: #333;
  margin: 0 15rpx 20rpx 0;
  position: relative;
}

.all_detail .rank_list .product_rank .rank_list_item:nth-of-type(3n) {
  margin-right: 0;
}

.all_detail .rank_list .product_rank .rank_list_item image {
  width: 40rpx;
  height: 30rpx;
  position: absolute;
  z-index: 10;
  right: 0;
  bottom: 0;
}

.all_detail .rank_list .product_rank .rank_list_item.ac {
  background: #fff3c4;
}

#home .rank .rank_item {
  position: relativel;
  z-index: 2;
  color: #333;
}

#home .rank .rank_item.ac {
  color: #1a1a1a;
}

.all_detail .rank_list .city_list .select {
  height: 78rpx;
  line-height: 78rpx;
  font-size: 24rpx;
  position: relative;
  color: rgb(51, 51, 51);
  border-top: 1px solid #f2f2f2;
}

.all_detail .rank_list .city_list .scroll_view {
  height: 160rpx;
  line-height: 160rpx;
  color: rgb(102, 102, 102);
  font-size: 24rpx;
}

.all_detail .rank_list .city_list .select image {
  width: 14rpx;
  height: 7rpx;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto 0;
  transform: rotate(180deg);
  transition: all 0.3s;
}

.all_detail .rank_list .btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  bottom: 90rpx;
  left: 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.all_detail .rank_list .btn .no {
  flex: 1;
  background-color: #f2f2f2;
}

.all_detail .rank_list .btn .yes {
  flex: 1;
  background-color: #ffda44;
  color: #1a1a1a;
}

#home .rank .active {
  position: absolute;
  left: 58rpx;
  bottom: 0;
  width: 134rpx;
  height: 6rpx;
  background-color: #ffda44;
  transition: all 0.3s;
}
#home .rank .active.ac {
  position: absolute;
  left: 308rpx;
  bottom: 0;
  width: 134rpx;
  height: 6rpx;
  background-color: #ffda44;
  transition: all 0.3s;
}

#home .rank .rank_item >image {
  width: 12rpx;
  height: 7rpx;
  vertical-align: middle;
  margin-top: -6rpx;
  transition: all 0.3s;
}

#home .list_wrapper {
  background-color: #f9f9f9;
  padding-top: 40rpx;
}

#home .list {
  width: 710rpx;
  margin: 0 auto;
}

#home .more {
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
  background-color: #f9f9f9;
  font-size: 28rpx;
  color: #b3b3b3;
}
