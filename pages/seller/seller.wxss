@import '../../base/productList/productList.wxss';

#seller, page {
  width: 100%;
  min-height: 100%;
  background-color: #fafafa;
}

#seller .user {
  padding-top: 32rpx;
  width: 750rpx;
  height: 360rpx;
  background-color: #ffda44;
  box-shadow: 0px 0 10rpx 0 #ffa944;
  border-radius: 0 0 25rpx 25rpx;
  margin-bottom: 40rpx;
}

#seller .user .avatar {
  padding: 8rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 #ffa944;
  border-radius: 50%;
  margin: 0 auto;
}

#seller .user .avatar image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

#seller .user .sign {
  padding-top: 20rpx;
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #333;
  text-align: center;
}

#seller .message {
  padding-top: 40rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

#seller .message_item {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  color: #1a1a1a;
}

#seller .message_item .text {
  line-height: 40rpx;
  font-size: 30rpx;
  color: #333;
}

.product_lists {
  padding: 0 40rpx;
}

.more {
	font-size: 28rpx;
	color: #b3b3b3;
  text-align: center;
}
