#mine {
}

#mine .user {
  padding-top: 62rpx;
  width: 750rpx;
  height: 278rpx;
  background-color: #ffda44;
  box-shadow: 0px 0 10rpx 0 #ffa944;
  border-radius: 0 0 25rpx 25rpx;
}

#mine .user .avatar {
  padding: 8rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 #ffa944;
  border-radius: 50%;
  margin: 0 auto;
}

#mine .user .avatar image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

#mine .user .sign {
  padding-top: 20rpx;
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #333;
  text-align: center;
}

#mine .list {
  padding: 20rpx 40rpx 0;
}

#mine .list .list_item {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 0;
}

#mine .list .list_item .icon {
  width: 34rpx;
  height: 34rpx;
  padding-right: 20rpx;
  margin-top: 30rpx;
  float: left;
}

#mine .list .list_item text {
  font-size: 28rpx;
}

#mine .list .list_item .right {
  width: 16rpx;
  height: 28rpx;
  float: right;
  margin-top: 34rpx;
}
